@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    <link rel="stylesheet" href="~/css/AuthCSS/login.css" asp-append-version="true" />
}

<form id="account" method="post">
    <div class="form_container">
        <h2>Sign in to your account.</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="mb-3">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="inputForm" aria-required="true" placeholder="Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.Password">Password</label>
            <input asp-for="Input.Password" class="inputForm" autocomplete="current-password" aria-required="true" placeholder="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="remember_forgot">
            <label class="remember-me-label">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
            <a id="forgot-password" asp-page="./ForgotPassword">Forgot Password</a>
        </div>
        <button type="submit">Sign in</button>
        <div class="bottom_navigation">
            New User? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"> Register</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var inputs = document.querySelectorAll(".inputForm");
            inputs.forEach(input => {
                input.addEventListener('focus', function () {
                    input.classList.add('active');
                });

                input.addEventListener('blur', function () {
                    input.classList.remove('active');
                });
            })
        })
    </script>
}
