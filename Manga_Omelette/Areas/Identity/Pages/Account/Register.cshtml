@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    <link rel="stylesheet" href="~/css/AuthCSS/login.css" asp-append-version="true" />
}

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="form_container">
        <h2>Register</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="mb-3">
            <label asp-for="Input.NameDisplay">Name Display</label>
            <input asp-for="Input.NameDisplay" class="inputForm" autocomplete="username" aria-required="true" placeholder="Name Display" />
            <span asp-validation-for="Input.NameDisplay" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.Email">Email</label>
            <input asp-for="Input.Email" class="inputForm" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.Password">Password</label>
            <input asp-for="Input.Password" class="inputForm" autocomplete="new-password" aria-required="true" placeholder="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
            <input asp-for="Input.ConfirmPassword" class="inputForm" autocomplete="new-password" aria-required="true" placeholder="password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="remember_forgot">
            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"> << Back to Login</a>
        </div>
        <button id="registerSubmit" type="submit">Register</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var inputs = document.querySelectorAll(".inputForm");
            inputs.forEach(input => {
                input.addEventListener('focus', function () {
                    input.classList.add('active');
                });

                input.addEventListener('blur', function () {
                    input.classList.remove('active');
                });
            })
        })
    </script>
}
