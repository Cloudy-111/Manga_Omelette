@model IEnumerable<Manga_Omelette.Models.Notification>
@{
    //ViewBag.Title = ViewBag.RoleName;
    Layout = "_SuperADMINLayout";
    <link rel="stylesheet" href="~/css/AdminCSS/NotificationinType.css" />
}

<a class="btn btn-primary" asp-controller="Notifications" asp-action="Create">Create new Notification</a>

<div>
    <h3>@ViewBag.TypeName Notification</h3>
    <hr />
    <table class="table_notification table table-hover table-bordered">
        <thead>
            <tr class="text-light ">
                <th >Id</th>
                <th >Title</th>
                <th >Content</th>
                <th >Create Date</th>
                <th >Sender Id</th>
                <th >Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var noti in Model)
            {
                <tr class="user_row text-light">
                    <td >@noti.Id</td>
                    <td >@noti.Title</td>
                    <td >@noti.Content</td>
                    <td >@noti.CreateDate</td>
                    <td >@noti.SenderId</td>
                    <td>
                        <a >Access</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<p id="page_number" style="display: none;">@ViewBag.Page</p>
<p id="total_page" style="display: none;">@ViewBag.TotalPages</p>
<p id="page_name" style="display: none;">@ViewBag.PageName</p>

@if (ViewBag.TotalPages > 1)
{
    <div class="pagination_container">
        <ul class="pagination_list">
            <li class="pagination_item" id="previousBtn">
                <a class="pagination_link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @if (ViewBag.TotalPages > 1)
            {
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="pagination_item" id="pagination_@i">
                        <a class="pagination_link" href="/notifications/@ViewBag.TypeId?page=@i">@i</a>
                    </li>
                }
            }
            <li class="pagination_item" id="nextBtn">
                <a class="pagination_link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </div>
}

@section Scripts {
    <script src="~/js/script_pagination.js"></script>
}