@model Manga_Omelette.Models_Secondary.ManageUserViewModel
@{
    ViewBag.Title = "Manage User";
    Layout = "_SuperADMINLayout";
    <link rel="stylesheet" href="~/css/AdminCSS/ManageUser.css"/>
}

<h1>Manage User</h1>
<div class="left_container">
    <h2>All Roles</h2>
    @if (Model.roles.Any())
    {
        <a class="btn btn-primary" asp-controller="Administration" asp-action="CreateRole">Add New Role</a>

        foreach(var role in Model.roles)
        {
            <div class="card mb-3">
                <div class="card-header">
                    Role Id : @role.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        <a asp-controller="Administration" asp-action="UsersInRole" asp-route-roleId="@role.Id">@role.Name</a>
                    </h5>
                </div>
                <div class="card-footer">
                    <a href="#" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No roles created yet
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Use the button below to create a role
                </h5>
                <a class="btn btn-primary" style="width:auto"
                   asp-controller="administration" asp-action="CreateRole">
                    Create Role
                </a>
            </div>
        </div>
    }

</div>

<div class="right_container"></div>