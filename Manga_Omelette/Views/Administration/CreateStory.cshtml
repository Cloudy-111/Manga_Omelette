@model Manga_Omelette.Models_Secondary.CreateStoryViewModel
@{
    ViewBag.Title = "Create New Story";
    Layout = "_SuperADMINLayout";
    <link rel="stylesheet" href="~/css/PageCSS/CreateStory.css" />
}

<form method="post" class="mt-3" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="story.Title" class="col-md-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="story.Title" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="fileupload" class="col-md-2 col-form-label">Add Cover Manga</label>
        <div class="col-sm-10">
            <input asp-for="imageFile" id="fileupload" type="file" multiple accept="image/*">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="story.Description" class="col-md-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="story.Description" placeholder="Add Description"></textarea>
        </div>
    </div>
    <input type="submit" value="Upload">
</form>